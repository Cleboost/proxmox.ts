{
  "name": "proxmox.ts",
  "version": "0.2.1",
  "description": "An API wrapper for Proxmox",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bun build src/index.ts --outdir dist --watch --dts",
    "build": "bun build src/index.ts --outdir dist --production --target node && bunx dts-bundle-generator -o dist/index.d.ts src/index.ts",
    "types": "bunx dts-bundle-generator -o dist/index.d.ts src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cleboost/proxmox.ts.git"
  },
  "keywords": [
    "proxmox",
    "api",
    "wrapper"
  ],
  "author": "Cleboost",
  "url": "git+https://github.com/Cleboost/proxmox.ts.git",
  "license": "ISC",
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "dts-bundle-generator": "^9.5.1",
    "typescript": "^5.8.3"
  }
}
